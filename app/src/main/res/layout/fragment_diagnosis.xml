<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.diagnosis.DiagnosisFragment">

    <ImageView
        android:id="@+id/diagnosis_image"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@id/diagnosis_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/diagnosis_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diagnosis:"
        app:layout_constraintBottom_toTopOf="@id/diagnosis_disease"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/diagnosis_image"/>

    <TextView
        android:id="@+id/diagnosis_disease"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blight"
        app:layout_constraintBottom_toTopOf="@id/diagnosis_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/diagnosis_label" />

    <TextView
        android:id="@+id/diagnosis_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. In faucibus, lacus suscipit scelerisque aliquam, ex mi ornare nibh, nec blandit dolor nisl sed felis. Proin tincidunt tortor quis blandit accumsan. Aliquam faucibus sollicitudin lorem ac sodales. Aenean commodo tincidunt sagittis. Vivamus bibendum tempor eros eget consectetur. Vestibulum ante ipsum primis in faucibus orci luctus et ultrices posuere cubilia curae; Aenean suscipit ac ligula non malesuada. Praesent sed convallis diam. Aliquam nibh nisi, placerat facilisis nisl vitae, posuere auctor justo. "

        app:layout_constraintBottom_toTopOf="@id/button_add_report_result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/diagnosis_disease" />

    <Button
        android:id="@+id/button_add_report_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        app:layout_constraintTop_toBottomOf="@+id/diagnosis_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_cancel"
        tools:layout_editor_absoluteX="141dp" />

    <Button
        android:id="@+id/button_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_add_report_result" />


</androidx.constraintlayout.widget.ConstraintLayout>